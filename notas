#include "stdafx.h"
#include "conio.h"
#include <iostream>

using namespace std;



void main()
{ 
	int i,id,n,np,ef,p1,p2,p3;
	float nf;
	char resp;
	
	do
	{
		cout<< " ID: ";
	    cin>> id;
		cout<< " Introduzca la nota practica: ";
	    cin>> np;
		cout<< " Introduzca la nota de los tres parciales: ";
	    cin>> p1;
		cin>> p2;
		cin>> p3;
		cout<< " Introduzca la nota del examen final: ";
	    cin>> ef;
		nf=np*0.2+((p1+p2+p3)/3)*0.4+ef*0.4;
		cout<< " La nota final es: "<< nf;
		cout<< " si desea continuar presione (Y) sino (N): ";
	    cin>> resp;
	}while(resp!= 'n');

	getch();
}
